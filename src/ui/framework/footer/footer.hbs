<footer class="skv-footer">
  <div class="container">
    <div class="row">
      <div class="col-12 col-lg-5">
        <div class="skv-footer__header-container">
          <img class="skv-footer__logo" src="/styleguide/assets/img/skolverket-logotype-white.svg" alt="{{ logoAlt }}" />
          <div class="skv-footer__description text-standard">{{description}}</div>
        </div>
      </div>
      <div class="col-12 col-lg-7">
        <div class="skv-footer__navigation-container">
          <ul class="skv-footer__navigation">
            {{#each navigation}}
            <li class="skv-footer__navigation-item">
              {{ render '@nav-link--light' this merge=true }}
            </li>
            {{/each}}
          </ul>
          <ul class="skv-footer__navigation">
            {{#each links}}
            <li class="skv-footer__navigation-item skv-footer__navigation-item--no-border-bottom">
              <a href="#5" class="skv-footer__navigation-item-link text-small">
                {{label}}
              </a>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</footer>
